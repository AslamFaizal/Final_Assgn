 <!-- Latest compiled and minified Bootstrap 3.4.1 CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

<div class="row">
    <section class="main col-md-9">
        {{#if data.product}}
            <article>
                <h2>{{data.product.title}}</h2>
                <img src="{{data.product.featureImage}}" alt="feature Image" style="width:100%" />
                <br /><br />
                {{#safeHTML data.product.body}}{{/safeHTML}}
                <br /><br />
                <strong>Category:</strong> {{data.product.category}}<br />
                <strong>Last Updated:</strong> {{data.product.postDate}}
            </article>
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Demo / Category</p>
            </div>
        {{/if}}

    </section>
    <aside class="col-md-3">
        <br /><br />
         {{#if data.demos}}
            <h3>Products</h3>
            <ul class="list-group">
                {{#each data.demos}}
                    <a href="/product/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a> 
                {{/each}}
            </ul>
        {{/if}}

        {{#if data.categories}}
        <h3>Categories</h3>
        <ul class="list-group">
           {{#each data.categories}}
                <a href="/product?category={{id}}" class="list-group-item">{{category}}</a>
            {{/each}}
        </ul>
        {{/if}}

        {{#if data.products}}
        <h3>Products</h3>
        <ul class="list-group">
            {{#each data.products}}
                <a href="/product/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
            {{/each}}
        </ul>
        {{/if}}
        
    </aside>
</div>